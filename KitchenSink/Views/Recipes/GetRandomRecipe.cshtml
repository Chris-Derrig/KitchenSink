
@{
    ViewData["Title"] = "GetRandomRecipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--We use razor to help collect the list that has been passed to us from the Home Controller-->
@model Recipes
<!--This table is used to display the data from the list-->
    <div class="row-md-12">
        <p class="recipe-header">@Model.Title</p>
        <image src=@Model.Image class="recipe-image">

            <div class="cold-md-4 scrollable-container ingredient-list-container">

                <h2>Ingredients</h2>
                @foreach (var options in Model.extendedIngredients)
                {
                    <ul class="ingedient-list">
                        <l1 class="ingedient-list-item"> @options.original</l1>
                    </ul>
                }
            </div>
            <div class="scrollable-container">
                @foreach (var step in Model.AnalyzedInstructions[0].steps)
                {
                    <ul class="recipe-list">
                        <li class="recipe-list-item">
                            @foreach (var ingred in step.ingredients)
                            {
                                @step.step
                            }
                        </li>
                    </ul>
                }
            </div>
    </div>
<section>
    <button onclick="window.location.reload();" class="form-control recipe-button col-12 col-6">Mmmm...new recipe.</button>
</section>
<br />
<section>
    <button onclick="location.href='@Url.Action("ToSaveRecipe", "SaveUserChoice", new {intId = Model.Id})'" class="form-control recipe-button col-12 col-6">Onto the DRANKS</button>
</section>
